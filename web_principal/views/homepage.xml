<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Banner -->
		<template id="import_css" name="Import custom css" inherit_id="website.assets_frontend">
			<xpath expr="." position="inside">
				<link href="/web_principal/static/src/css/estilos.css" rel="stylesheet" type="text/css"/>
				<link href="/web_principal/static/src/css/header.css" rel="stylesheet" type="text/css"/>
			</xpath>
		</template>
		<template inherit_id="website.homepage" id="homepage_inherit">
			<xpath expr="//div[@id='wrap']" position="replace">
				<body>
					<!--video-->
